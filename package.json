{
  "name": "olasearch",
  "version": "1.2.3",
  "description": "OlaSearch is a fully customisable front-end search interface that brings your information collection to life.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf dist lib",
    "watch": "BABEL_ENV=production babel --watch src --out-dir lib",
    "build": "NODE_ENV=production webpack --config webpack.config.production.js --progress",
    "lint": "npm run standard && eslint src",
    "nyc": "nyc npm run test",
    "test": "BABEL_ENV=production mocha --compilers js:babel-register --recursive --require ./test/setup.js",
    "test:watch": "npm test -- --watch",
    "coverage": "cross-env BABEL_ENV=production babel-node $(npm bin)/isparta cover $(npm bin)/_mocha -- --recursive",
    "standard": "standard --verbose --fix | snazzy"
  },
  "engines": {
    "node": ">=6.4.0",
    "npm": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/olasearch/olasearch-core.git"
  },
  "keywords": [
    "olasearch"
  ],
  "author": "Vinay M <vinay@olasearch.com> (http://gitlab.com/olasearch)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/olasearch/olasearch-core/issues"
  },
  "homepage": "https://gitlab.com/olasearch/olasearch-core",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/test",
      "/lib",
      "/node_modules"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js",
      "*setup.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-olasearch": "^1.0.0",
    "babel-preset-react-hmre": "^1.0.0",
    "babel-register": "^6.24.1",
    "chokidar": "^1.6.1",
    "cross-env": "^4.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-react": "^6.10.3",
    "expect": "^1.20.2",
    "expose-loader": "^0.7.3",
    "express": "^4.15.2",
    "isparta": "^4.0.0",
    "mocha": "^3.3.0",
    "nyc": "^10.3.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-perf": "^15.4.2",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.1.0 < 16",
    "react-dom": "^0.14.0 || ^15.1.0 < 16",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "dom-scroll-into-view": "^1.2.1",
    "fecha": "^2.3.0",
    "flatpickr": "^2.6.1",
    "google-map-react": "^0.24.0",
    "hoist-non-react-statics": "^1.2.0",
    "invariant": "^2.2.2",
    "ismobilejs": "^0.4.1",
    "jsdom": "^10.1.0",
    "nouislider": "^9.2.0",
    "query-string": "^4.3.4",
    "ramda": "^0.23.0",
    "react-list": "^0.8.5",
    "react-onclickoutside": "^5.11.1",
    "react-responsive": "^1.2.10",
    "redux-logger": "^3.0.1",
    "xss": "^0.3.3",
    "xss-filters": "^1.2.7"
  },
  "pre-commit": [
    "standard"
  ]
}
