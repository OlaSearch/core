{
  "name": "olasearch",
  "version": "1.1.1",
  "description": "OlaSearch is a fully customisable front-end search interface that brings your information collection to life.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf dist lib",
    "watch": "BABEL_ENV=production babel --watch src --out-dir lib",
    "build": "NODE_ENV=production webpack --config webpack.config.production.js --progress",
    "lint": "npm run standard && eslint src",
    "nyc": "nyc npm run test",
    "test": "BABEL_ENV=production mocha --compilers js:babel-register --recursive --require ./test/setup.js",
    "test:watch": "npm test -- --watch",
    "coverage": "cross-env BABEL_ENV=production babel-node $(npm bin)/isparta cover $(npm bin)/_mocha -- --recursive",
    "standard": "standard --verbose | snazzy"
  },
  "engines": {
    "node": ">=0.12",
    "npm": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/olasearch/olasearch-core.git"
  },
  "keywords": [
    "olasearch"
  ],
  "author": "Vinay M <vinay@olasearch.com> (http://gitlab.com/olasearch)",
  "license": "Copyright Ola Search Pte Ltd",
  "bugs": {
    "url": "https://gitlab.com/olasearch/olasearch-core/issues"
  },
  "homepage": "https://gitlab.com/olasearch/olasearch-core",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/test",
      "/lib",
      "/node_modules"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js",
      "*setup.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-preset-olasearch": "^1.0.0",
    "babel-preset-react-hmre": "^1.0.0",
    "babel-register": "^6.18.0",
    "cross-env": "^3.1.3",
    "enzyme": "^2.6.0",
    "eslint": "^3.12.2",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-react": "^6.8.0",
    "expect": "^1.20.2",
    "expose-loader": "^0.7.1",
    "express": "^4.14.0",
    "isparta": "^4.0.0",
    "jsdom": "^9.8.3",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "react": "^15.4.1",
    "react-addons-perf": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.4",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.1.0 < 16",
    "react-dom": "^0.14.0 || ^15.1.0 < 16",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "dom-scroll-into-view": "^1.2.1",
    "fecha": "^2.3.0",
    "hoist-non-react-statics": "^1.2.0",
    "invariant": "^2.2.2",
    "ismobilejs": "^0.4.0",
    "nouislider": "^9.1.0",
    "query-string": "^4.2.3",
    "ramda": "^0.22.1",
    "react-list": "^0.8.0",
    "react-onclickoutside": "^5.7.1",
    "react-responsive": "^1.2.5",
    "redux-logger": "^2.7.4",
    "xss-filters": "^1.2.7"
  },
  "pre-commit": [
    "standard"
  ]
}
